    <item>
        <shape android:shape="rectangle" >
            <!-- from top to bottom -->
            <gradient
                android:angle="90"
                android:endColor="#1b1b1b"
                android:startColor="#1b1b1b" />
            <corners android:radius="11dp" />
        </shape>
    </item>

    <item
        android:left="1px"
        android:right="1px"
        android:top="1px"
        android:bottom="1px">
        <shape android:shape="rectangle">
            <solid android:color="#1b1b1b"/>
            <corners android:radius="11dp" />
        </shape>
    </item>
</layer-list>