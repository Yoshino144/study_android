<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:background="@color/write_fan"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="考试设置"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/one"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/shape_exa_but"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/one_text"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:text="题数：10道   时间：10分钟"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/shape_exa_but"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/two_text"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#44000000"
                android:layout_width="wrap_content"
                android:text="题数：20道   时间：20分钟"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/shape_exa_but"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/three_text"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="#44000000"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:text="题数：30道   时间：30分钟"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/four"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/shape_exa_but"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/four_text"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="#44000000"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:text="全部"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/exa_ok"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/shape_exa_submit"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/write_fan"
                android:layout_width="wrap_content"
                android:text="确定"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/write_fan"
        android:id="@+id/view_two"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <top.pcat.study.View.CircleRippleView
                android:id="@+id/radar_bg_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:src="@drawable/radar_bg" />

            <ImageView
                android:id="@+id/radar_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:src="@drawable/radar" />

            <top.pcat.study.View.RadarImageView
                android:id="@+id/radar_head_image"
                android:layout_width="@dimen/radar_head_image_width"
                android:layout_height="@dimen/radar_head_image_width"
                android:layout_centerInParent="true"
                android:src="@drawable/user" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="-200dp"
            android:layout_height="300dp">

            <TextView
                android:text="请稍等..."
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="#998f8f8f"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>