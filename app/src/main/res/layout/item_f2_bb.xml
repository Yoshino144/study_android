<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <top.pcat.study.View.CustomRoundAngleImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image44"
            roundiv:left_bottom_radius="10dp"
            roundiv:left_top_radius="10dp"
            roundiv:right_bottom_radius="10dp"
            roundiv:right_top_radius="10dp">

        </top.pcat.study.View.CustomRoundAngleImageView>


        <LinearLayout
            android:id="@+id/kapian1"
            android:background="@drawable/tupianhui"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <TextView
                android:layout_marginLeft="13dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Top"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:layout_marginLeft="12dp"
                android:id="@+id/bang_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="人数榜"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/item_f2_bang"
                android:id="@+id/recycler_kechngbangdan_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>
