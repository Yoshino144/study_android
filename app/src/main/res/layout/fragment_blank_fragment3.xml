<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/f3_bar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="0dp"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <com.flyco.tablayout.SlidingTabLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tab"
                android:layout_width="200dp"
                android:layout_height="29dp"
                android:layout_gravity="center_vertical"
                android:background="#fff"
                app:tl_indicator_color="@color/pc_blue3"
                app:tl_indicator_corner_radius="1dp"
                app:tl_indicator_height="2dp"
                app:tl_indicator_margin_top="3dp"
                app:tl_indicator_width="10dp"
                app:tl_tab_space_equal="true"
                app:tl_textSelectColor="@color/pc_blue3"
                app:tl_textUnselectColor="#937F7F"
                app:tl_textsize="17sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/renwulan2" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="排行"
        android:textColor="#000000"
        android:textSize="25dp"
        android:visibility="gone" />


</LinearLayout>