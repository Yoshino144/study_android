<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/loginback"
            android:layout_width="25dp"
            android:layout_gravity="center"
            android:layout_height="25dp"
            android:src="@drawable/back_hui"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bbbbb"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/shape_sign"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/userpas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="1.5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_sign_son"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="手机号密码登录"
                android:textColor="#000000"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="1.5dp"
            android:background="@drawable/shape_sign"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="手机号登录"
                android:textColor="#000000"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/aaaaaa"
        android:layout_below="@+id/bbbbb"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_edit1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/username"
                android:background="#ffffff"
                android:hint="手机号"
                android:textSize="17dp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:textColorHint="#95A1AA"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_edit1"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/password"
                android:background="#ffffff"
                android:inputType="textPassword"
                android:hint="密码"
                android:textSize="17dp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:textColorHint="#95A1AA"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:visibility="visible"
        android:id="@+id/cccccc"
        android:layout_below="@id/aaaaaa"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content">

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/gores"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:background="@drawable/shape_cr_button"
            android:layout_height="match_parent"/>

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/come"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:background="@drawable/shape_cr_button2"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/dddddd"
        android:layout_below="@+id/bbbbb"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_edit1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/sjh"
                android:background="#ffffff"
                android:hint="手机号"
                android:textSize="17dp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:textColorHint="#95A1AA"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_edit1"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/yzm"
                android:background="#ffffff"
                android:inputType="textPassword"
                android:hint="验证码"
                android:textSize="17dp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:textColorHint="#95A1AA"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/yzmbut"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginLeft="-95dp"
                android:text="获取验证码"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/shape_sign_huo"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/eeeeee"
        android:layout_below="@id/dddddd"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/goress"
            android:stateListAnimator="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:background="@drawable/shape_cr_button"
            android:layout_height="match_parent"/>

        <Button

            android:id="@+id/comee"
            android:stateListAnimator="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:background="@drawable/shape_cr_button2"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_touch_layout"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_sign_button"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:background="@drawable/shape_sign_son2"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/login_qq"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_marginTop="1.5dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/qqq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="QQ"
                    android:textColor="#787878" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_wechat"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/wechat" />

                <TextView
                    android:id="@+id/wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="微信"
                    android:layout_marginTop="4dp"
                    android:textColor="#787878" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_sina"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/sinaweibo" />

                <TextView
                    android:id="@+id/wb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_centerVertical="true"
                    android:text="微博"
                    android:textColor="#787878" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/forward" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="忘记"
                    android:layout_marginTop="4dp"
                    android:textColor="#787878" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>